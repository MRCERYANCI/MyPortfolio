@model MyPortfolio.DAL.Entities.About

<section id="about" class="s-about target-section">
    <div class="row narrow section-intro has-bottom-sep">
        <div class="col-full text-center">
            <h3>Hakkımda</h3>
            <h1>@Html.DisplayFor(x => x.Title)</h1>
            <p class="lead">@Html.DisplayFor(x => x.SubDescription)</p>
        </div>
    </div>

    <div class="row about-content">
        <div class="col-six tab-full left">
            <h3>Ben Kimim?</h3>
            <p>
                @Html.DisplayFor(x => x.Details)
            </p>
        </div>

        @await Component.InvokeAsync("_SkillDefaultComponentPartial")
    </div>

    <div class="row about-content about-content--buttons">
        <div class="col-six tab-full left">
            <a href="@Html.DisplayFor(x=>x.CV)" download class="btn btn--primary full-width">CV'mi İndir</a>
        </div>
        <div class="col-six tab-full right">
            <a href="#contact" class="btn full-width smoothscroll">Bana Yazın</a>
        </div>
    </div>

    @await Component.InvokeAsync("_ExperienceDefaultComponentPartial")
</section> 